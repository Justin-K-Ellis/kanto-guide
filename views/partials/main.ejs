<main class="w-11/12 mx-auto md:w-2/3 flex flex-col gap-4">
  <h1 class="text-3xl font-bold"><%= name %></h1>
  <section id="description">
    <h2 class="text-2xl underline">About <%= name %></h2>
    <p><%= description %></p>
  </section>
  <section id="history">
    <h2 class="text-2xl underline">A little history</h2>
    <p><%= history %></p>
  </section>
  <section id="places">
    <h2 class="text-2xl underline">A few interesting places</h2>
    <ul class="list-decimal px-10">
      <% places.forEach(place => { %>
      <li><%= place %></li>
      <% }) %>
    </ul>
  </section>
  <section id="trivia">
    <h2 class="text-2xl underline">Trivia</h2>
    <ul class="list-disc px-6">
      <% trivia.forEach(t => { %>
      <li><%= t %></li>
      <% }) %>
    </ul>
  </section>
  <section class="mx-auto">
    <button class="btn btn-primary"><a href="/">Back</a></button>
  </section>
</main>
